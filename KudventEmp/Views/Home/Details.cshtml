<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath"  asp-append-version="true"/>
                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Deparmtent: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-primary">Back</a>
                @*<a href="#" class="btn btn-outline-primary">Back</a>*@
                <a asp-action="Edit" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-outline-primary">Edit</a>
                <a href="#" class="btn btn-outline-danger">Delete</a>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/CustomScript.js"></script>
